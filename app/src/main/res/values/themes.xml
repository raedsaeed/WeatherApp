<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!--        The background color appears behind scrollable content. The baseline background and surface color is         <item name="android:colorBackground"></item>-->
        <item name="android:colorBackground">@color/whit_background</item>
        <item name="colorOnBackground">@color/black_90</item>

        <!--        Surface colors affect surfaces of components, such as cards, sheets, and menus.-->
        <item name="colorSurface">@color/whit_background</item>
        <item name="colorOnSurface">@color/black_90</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>

    <style name="BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheet</item>
    </style>

    <style name="RoundedBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/RoundedShape24dp</item>
    </style>
</resources>