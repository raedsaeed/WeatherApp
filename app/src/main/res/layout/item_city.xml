<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_item_city_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_city" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_item_city_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="start|center_vertical"
            android:paddingStart="@dimen/dp8"
            android:paddingEnd="@dimen/dp8"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="@dimen/sp14"
            app:fontFamily="@font/roboto_bold"
            app:layout_constraintBottom_toBottomOf="@id/iv_item_city_icon"
            app:layout_constraintEnd_toStartOf="@id/iv_item_city_info"
            app:layout_constraintStart_toEndOf="@id/iv_item_city_icon"
            app:layout_constraintTop_toTopOf="@id/iv_item_city_icon"
            tools:text="Cairo, EG" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_item_city_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp8"
            android:layout_marginEnd="@dimen/dp8"
            android:padding="@dimen/dp8"
            app:layout_constraintBottom_toBottomOf="@id/tv_item_city_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_item_city_name"
            app:srcCompat="@drawable/ic_info_24"
            app:tint="?attr/colorPrimary" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
